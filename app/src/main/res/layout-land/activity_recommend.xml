<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app2=""
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#62cdba"
    tools:context="com.companio.recommend.RecommendActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="202dp"
        android:layout_height="221dp"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

    </FrameLayout>

    <Button
        android:text="Menu"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:elevation="0dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:padding="22dp" />

    <Button
        android:text="Get Directions"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:elevation="0dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="100dp"
        android:layout_marginRight="163dp"
        android:background="@android:color/holo_orange_dark" />

    <ImageView
        android:layout_width="479dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/itachosushi"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="418dp"
        android:layout_height="405dp"
        app:srcCompat="@drawable/robot4"
        android:id="@+id/imageView5"
        android:layout_gravity="center_vertical" />

    <TextView
        android:text="Itacho Sushi"
        android:layout_width="478dp"
        android:layout_height="369dp"
        android:id="@+id/textView"
        android:background="@android:color/background_light"
        android:textColor="?attr/colorPrimary"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="120dp"
        android:textSize="28sp"
        android:gravity="center_horizontal" />

    <TextView
        android:text="Japanese Restaurant"
        android:layout_width="421dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/black_overlay"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="245dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/location"
        android:id="@+id/imageView4"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="Terminal 3, #03-30/31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="?attr/colorPrimary"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="250dp"
        android:textSize="12sp" />

</FrameLayout>
