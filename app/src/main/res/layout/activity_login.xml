<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.companio.login.LoginActivity">

    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="90dp"
        android:padding="30dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_below="@id/title"
        android:text="kiwi@changiairport.com" />

    <EditText android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:layout_below="@id/email"
        android:text="password"
        android:password="true"/>

    <RelativeLayout android:id="@+id/social_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true" >

        <ImageButton android:id="@+id/google"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/google"
            android:layout_marginRight="10dp" />

        <ImageButton android:id="@+id/facebook"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/facebook"
            android:layout_toRightOf="@id/google"
            android:layout_alignTop="@id/google" />

    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:text="Register" />

        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:layout_margin="5dp"
            android:text="Login" />

    </LinearLayout>

</RelativeLayout>
